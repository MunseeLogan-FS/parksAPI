{
  "name": "api-with-react",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "install-reactjs": "npm install --prefix new-react-parks --include=dev",
    "install-api": "npm install --prefix api",
    "build-react": "npm run build --prefix new-react-parks",
    "heroku-postbuild": "concurrently \"npm:install-*\"; concurrently \"npm:build-*\"; ",
    "start": "npm start --prefix api",
    "dev:react": "concurrently --raw \"npm run api\" \"npm run react\"",
    "api": "cd api && node server.js",
    "react": "cd new-react-parks && npm run dev"
  },
  "dependencies": {
    "concurrently": "^9.1.2"
  }
}
